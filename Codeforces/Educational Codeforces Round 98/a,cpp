#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int t;
    cin >> t;
    while (t--) {
        int a, b;
        cin >> a >> b;
        if ( abs(a - b) < 2)
            cout << a + b << endl;
        else {
            if (a > b)
                cout << 2 * a - 1;
            else
                cout << 2 * b - 1;
            cout << endl;
        }
    }
    return 0;
}